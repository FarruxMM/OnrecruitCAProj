@model CandidateViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<nav aria-label="Page navigation example" class="pt-4 pb-4">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>

        @for (int i = 1; i <= Model.Pagination.TotalPage; i++)
        {
            if (i == Model.Pagination.CurrentPage)
            {
                <li class="page-item disabled">
                    <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                </li>
            }
            else
            {
                <li class="page-item ">
                    <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                </li>
            }

        }

        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>


<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                FullName
            </th>
            <th>
                AppUserID
            </th>
            <th>
                UserType
            </th>
            <th>
                BirthDate
            </th>
            <th>
                Email
            </th>

            <th>
                PhoneNumber
            </th>

            <th>
                Profession
            </th>

            <th>
                Status
            </th>

            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Candidates)
        {
            <tr>
                <td>
                    <img style="width: 70px; height: 70px;" src="~/img/candidateimg/@item.Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName, item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Appuser.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usertype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Profession.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-circle">
                        <i class="fas fa-fw fa-wrench"></i>
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-circle">
                        <i class="fas fa-eye"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle">

                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
