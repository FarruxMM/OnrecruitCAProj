                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PositionId" class="control-label"></label>
                <select asp-for="@Model.PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="@Model.PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CompanyId" class="control-label"></label>
                <select asp-for="@Model.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="@Model.CompanyId" class="text-danger"></span>
