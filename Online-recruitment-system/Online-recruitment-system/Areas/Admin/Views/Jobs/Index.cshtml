@model JobViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>

            <th>
                Position
            </th>
            <th>
                JobType
            </th>
            <th>
                JobSituation
            </th>
            <th>
                CreateDate
            </th>
            <th>
                Salary
            </th>
            <th>
                Status
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Jobs)
        {
            <tr>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    @item.Position.Name
                </td>

                <td>
                    @item.JobType.Type
                </td>
                <td>
                    @item.JobSituation.Name
                </td>

                <td>
                    @item.CreateDate
                </td>
                <td>
                    @item.Salary
                </td>
                <td>
                    @item.IsActive
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-circle">
                        <i class="fas fa-fw fa-wrench"></i>

                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-circle">
                        <i class="fas fa-eye"></i>

                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle">
                        <i class="fas fa-trash"></i>

                    </a>
                </td>
            </tr>
        }

        <nav aria-label="Page navigation example" class="pt-4 pb-4">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>

                @for (int i = 1; i <= Model.Pagination.TotalPage; i++)
                {
                    if (i == Model.Pagination.CurrentPage)
                    {
                        <li class="page-item disabled">
                            <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item ">
                            <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                        </li>
                    }

                }

                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </tbody>
</table>
