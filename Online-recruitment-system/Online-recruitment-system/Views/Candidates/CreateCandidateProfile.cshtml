    <section id="profile-form">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">

                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active"
                             id="v-pills-home"
                             role="tabpanel"
                             aria-labelledby="v-pills-home-tab">
                            <div class="profile-content">
                                <div class="small text-danger" asp-validation-summary="ModelOnly"></div>

                                <form method="post" asp-action="CreateCandidateProfile" enctype="multipart/form-data">
                                    <div class="profile-content-inner">
                                        <h2>Basic Info</h2>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.FirstName"></label>
                                                    <input type="text"
                                                           asp-for="@Model.FirstName"
                                                           class="form-control"
                                                           placeholder="name" />
                                                    <span class="text-danger small" asp-validation-for="@Model.FirstName"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.LastName"></label>
                                                    <input type="text"
                                                           asp-for="@Model.LastName"
                                                           class="form-control"
                                                           placeholder="surname" />
                                                    <span class="text-danger small" asp-validation-for="@Model.LastName"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Email"></label>
                                                    <input type="email"
                                                           asp-for="@Model.Email"
                                                           class="form-control"
                                                           placeholder="email" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Email"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.PhoneNumber"></label>
                                                    <input type="text"
                                                           asp-for="@Model.PhoneNumber"
                                                           class="form-control"
                                                           placeholder="PhoneNumber" />
                                                    <span class="text-danger small" asp-validation-for="@Model.PhoneNumber"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.BirthDate"></label>
                                                    <input type="date" min="1950-01-01" max="2022-12-31"
                                                           asp-for="@Model.BirthDate"
                                                           value="@DateTime.Now.ToShortDateString()"
                                                           class="form-control"
                                                           placeholder="BirthDate" />
                                                    <span class="text-danger small" asp-validation-for="@Model.BirthDate"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.ProfessionId"></label>
                                                    <select class="form-control form-control-sm" asp-for="@Model.ProfessionId" asp-items="@Model.Professions">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>
                                                    <span class="text-danger small" asp-validation-for="@Model.ProfessionId"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.GenderId"></label>
                                                    <select class="form-control form-control-sm" asp-for="@Model.GenderId" asp-items="@Model.Genders">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>
                                                    <span class="text-danger small" asp-validation-for="@Model.GenderId"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Skill"></label>

                                                    <select class="form-control form-control-sm" asp-for="@Model.Skill" multiple asp-items="@Model.SkillList">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>

                                                    <span class="text-danger small" asp-validation-for="@Model.Skill"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Img"></label>
                                                    <input asp-for="@Model.Img" type="file" accept="image/*" class="form-control" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Img"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.About"></label>
                                                    <textarea id="about" asp-for="@Model.About" rows="4" cols="50" class="form-control" placeholder="about yourself">
                                                       
                                                     </textarea>

                                                    <span class="text-danger small" asp-validation-for="@Model.About"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="profile-content-inner">
                                        <h2>Education</h2>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Education.Faculty"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Education.Faculty"
                                                           class="form-control"
                                                           placeholder="Faculty" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.Faculty"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label>Graduation Date</label>
                                                    <input type="date" min="1900-01-01" max="2022-12-31"
                                                           value="@DateTime.Now.ToShortDateString()"
                                                           asp-for="@Model.Education.Years"
                                                           class="form-control"
                                                           placeholder="Gradution Date" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.Years"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Education.University"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Education.University"
                                                           class="form-control"
                                                           placeholder="University" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.University"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Education.Degree"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Education.Degree"
                                                           class="form-control" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.Degree"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="profile-content-inner">
                                        <h2>Experience</h2>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Experience.Location"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Experience.Location"
                                                           class="form-control"
                                                           placeholder="Faculty" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Experience.Location"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Experience.Year"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Experience.Year"
                                                           class="form-control"
                                                           placeholder="xperience-year" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Experience.Year"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Experience.Position"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Experience.Position"
                                                           class="form-control"
                                                           placeholder="University" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Experience.Position"></span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="profile-content-inner">
                                        <h2>Social Links</h2>
                                        <div class="row">

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[0].Name"
                                                           class=" form-control"
                                                           placeholder="https://www.facebook.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks[0]"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[1].Name"
                                                           class="form-control"
                                                           placeholder="https://www.twitter.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks[1]"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[2].Name"
                                                           class="form-control"
                                                           placeholder="https://www.instagram.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[3].Name"
                                                           class="form-control"
                                                           placeholder="https://www.linkedin.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks"></span>
                                                </div>
                                            </div>
                                            <input type="hidden" asp-for="@Model.AppUserId" value="@Model.AppUserId" />

                                        </div>
                                    </div>
                                    <button type="submit" class="btn dashboard-btn">
                                        Save Your Information
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

