@{
    Layout = null;
}

@model CandidateViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit-profile</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/candidate-profile.css" />
</head>
<body>
    <div class="preloader">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="spinner"></div>
            </div>
        </div>
    </div>

    <div class="main-nav fixed-top">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md navbar-light">
                <a href="" class="navbar-brand">
                    <img src="~/img/JA-logo1.jpg" alt="Logo" class="logo" />
                </a>
                <div class="collapse navbar-collapse mean-menu mx-5 d-flex justify-content-between">
                    <ul class="navbar-nav">
                        <ul class="navbar-nav">
                            <li class="nav-item mx-3"><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li class="nav-item mx-3">About</li>
                            <li class="nav-item mx-3"><a asp-action="Index" asp-controller="Jobs">Jobs</a></li>
                            <li class="nav-item mx-3">
                                <a asp-action="Index" asp-controller="Candidates">Candidates</a>
                            </li>
                            <li class="nav-item mx-3"><a asp-action="Index" asp-controller="Contact">Contact</a></li>

                        </ul>
                    </ul>
                    <div class="side-nav">
                        <ul class="for-user">

                            <li class="nav-item mx-3">
                                <a class="nav-link" asp-controller="Candidates" asp-action="CandidateProfile">
                                    <i class="bi bi-person"></i>
                                    @Model.Candidate.FirstName.ToUpper()
                                </a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-left"></i>
                                    Logout
                                </a>
                            </li>

                        </ul>
                        <a href="" class="job-button"></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="page-title-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="title-item">
                        <h2>Candidate-profile</h2>
                        <ul>
                            <li>
                                <img src="~/img/title-img-two.png" alt="Image" />
                                <a asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li>
                                <span>/</span>
                            </li>
                            <li>Candidate-profile</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="profile-form">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                    <div class="profile-item">
                        @if (Model.Candidate.Image == null)
                        {
                            <img src="~/img/Default-profilepic.jpg" alt="Dashboard" />

                        }

                        <img src="~/img/candidateimg/@Model.Candidate.Image" alt="Dashboard" />

                        <h2>@Model.FirstName</h2>

                        @*@if (Model.Candidate.Profession.Name == null)
                        {
                            <span></span>
                        }
                        <span>@Model.Candidate.Profession.Name</span>*@

                    </div>
                    <div class="nav flex-column nav-pills"
                         id="v-pills-tab"
                         role="tablist"
                         aria-orientation="vertical">
                        <a class="nav-link active"
                           id="v-pills-home-tab"
                           data-bs-toggle="pill"
                           asp-action="CandidateResume"
                           asp-controller="Candidates"
                           role="tab"
                           aria-controls="v-pills-home"
                           aria-selected="true">
                            <i class="bi bi-person"></i>
                            My Profile
                        </a>

                        <a asp-action="Logout" asp-controller="Account">
                            <div class="profile-list">
                                <i class="bi bi-box-arrow-left"></i>
                                Logout
                            </div>
                        </a>
                    </div>

                </div>


                <div class="col-lg-8">

                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active"
                             id="v-pills-home"
                             role="tabpanel"
                             aria-labelledby="v-pills-home-tab">
                            <div class="profile-content">
                                <div class="small text-danger" asp-validation-summary="ModelOnly"></div>
                                <input type="hidden" name="AppUserId" value="" />
                                <form method="post" asp-action="EditCandidateProfile" enctype="multipart/form-data">
                                    <div class="profile-content-inner">
                                        <h2>Basic Info</h2>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.FirstName"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Candidate.FirstName"
                                                           class="form-control"
                                                           placeholder="name" />
                                                    <span class="text-danger small" asp-validation-for="@Model.FirstName"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.LastName"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Candidate.LastName"
                                                           class="form-control"
                                                           placeholder="surname" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.LastName"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.Email"></label>
                                                    <input type="email"
                                                           asp-for="@Model.Candidate.Email"
                                                           class="form-control"
                                                           placeholder="email" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.Email"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.PhoneNumber"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Candidate.PhoneNumber"
                                                           class="form-control"
                                                           placeholder="PhoneNumber" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.PhoneNumber"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.BirthDate"></label>
                                                    <input type="date"
                                                           value="@DateTime.Now.ToShortDateString()"
                                                           asp-for="@Model.Candidate.BirthDate"
                                                           class="form-control"
                                                           placeholder="BirthDate" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.BirthDate"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.Profession"></label>
                                                    <select class="form-control form-control-sm" asp-for="@Model.Candidate.ProfessionId" asp-items="@Model.Professions">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>
                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.Profession"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.Gender"></label>
                                                    <select class="form-control form-control-sm" asp-for="@Model.Candidate.GenderId" asp-items="@Model.Genders">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>
                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.GenderId"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Skill"></label>

                                                    <select class="form-control form-control-sm" asp-for="@Model.Skill" multiple asp-items="@Model.SkillList">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>

                                                    <span class="text-danger small" asp-validation-for="@Model.Skill"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Image"></label>
                                                    <input asp-for="@Model.Img" type="file" accept="image/*" class="form-control" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Image"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Candidate.About"></label>
                                                    <textarea id="about" asp-for="@Model.Candidate.About" rows="4" cols="50" class="form-control" placeholder="about yourself">
                                                        They offer free tutorials in all web development technologies.
                                                     </textarea>

                                                    <span class="text-danger small" asp-validation-for="@Model.Candidate.About"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" value="@Model.Candidate.Image" asp-for="@Model.Candidate.Image" />
                                    <input type="hidden" value="@Model.Candidate.SkillToCandidates" asp-for="@Model.Candidate.SkillToCandidates" />

                                    <div class="profile-content-inner">
                                        <h2>Education</h2>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Education.Faculty"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Education.Faculty"
                                                           class="form-control"
                                                           placeholder="Faculty" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.Faculty"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label >Graduation Year</label>
                                                    <input type="date"
                                                             value="@DateTime.Now.ToShortDateString()"
                                                           asp-for="@Model.Education.Years"
                                                           class="form-control"
                                                           placeholder="Education-years" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.Years"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Education.University"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Education.University"
                                                           class="form-control"
                                                           placeholder="University" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.University"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Education.Degree"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Education.Degree"
                                                           class="form-control"
                                                           placeholder="Degree" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Education.Degree"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="profile-content-inner">
                                        <h2>Experience</h2>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Experience.Year"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Experience.Year"
                                                           class="form-control"
                                                           placeholder="Year" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Experience.Year"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Experience.Location"></label>
                                                    <input type="datetime"
                                                           asp-for="@Model.Experience.Location"
                                                           class="form-control"
                                                           placeholder="Location" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Experience.Location"></span>
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Experience.Position"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Experience.Position"
                                                           class="form-control"
                                                           placeholder="Position" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Experience.Position"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="profile-content-inner">
                                        <h2>Social Links</h2>
                                        <div class="row">

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[0].Name"
                                                           class=" form-control"
                                                           placeholder="https://www.facebook.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks[0]"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[1].Name"
                                                           class="form-control"
                                                           placeholder="https://www.twitter.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks[1]"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[2].Name"
                                                           class="form-control"
                                                           placeholder="https://www.instagram.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.SocialLinks"></label>
                                                    <input type="text"
                                                           asp-for="@Model.SocialLinks[3].Name"
                                                           class="form-control"
                                                           placeholder="https://www.linkedin.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.SocialLinks"></span>
                                                </div>
                                            </div>
                                            <input type="hidden" asp-for="@Model.Candidate.AppUserId" value="@Model.AppUserId" />
                                            <input type="hidden" asp-for="@Model.Candidate.Id" value="@Model.Candidate.Id" />
                                            <input type="hidden" asp-for="@Model.Candidate.Usertype" value="1" />

                                        </div>
                                    </div>
                                    <button type="submit" class="btn dashboard-btn">
                                        Save Your Information
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

