@{
    Layout = null;
}

@model CompanyCreateViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Company profile</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/candidate-profile.css" />
</head>
<body>
    <div class="preloader">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="spinner"></div>
            </div>
        </div>
    </div>

    <div class="main-nav fixed-top">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md navbar-light">
                <a href="" class="navbar-brand">
                    <img src="~/img/JA-logo1.jpg" alt="Logo" class="logo" />
                </a>
                <div class="collapse navbar-collapse mean-menu mx-5 d-flex justify-content-between">
                    <ul class="navbar-nav">
                        <ul class="navbar-nav">
                            <li class="nav-item mx-3"><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li class="nav-item mx-3">About</li>
                            <li class="nav-item mx-3"><a asp-action="Index" asp-controller="Jobs">Jobs</a></li>
                            <li class="nav-item mx-3">
                                <a asp-action="Index" asp-controller="Candidates">Candidates</a>
                            </li>
                            <li class="nav-item mx-3"><a asp-action="Index" asp-controller="Contact">Contact</a></li>

                        </ul>
                    </ul>
                    <div class="side-nav">
                        <ul class="for-user">

                            <li class="nav-item mx-3">
                                <a class="nav-link" asp-controller="Candidates" asp-action="CandidateProfile">
                                    <i class="bi bi-person"></i>
                                    @Model.AppUser.FullName
                                </a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-left"></i>
                                    Logout
                                </a>
                            </li>

                        </ul>
                        <a href="" class="job-button"></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="page-title-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="title-item">
                        <h2>Company-profile</h2>
                        <ul>
                            <li>
                                <img src="~/img/title-img-two.png" alt="Image" />
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <span>/</span>
                            </li>
                            <li>Company-profile</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="profile-form">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                    <div class="profile-item">
                        <img src="~/img/DefaultImg.png" alt="Dashboard" />
                        <h2>@Model.AppUser.FullName</h2>

                        <span></span>
                    </div>
                    <div class="nav flex-column nav-pills"
                         id="v-pills-tab"
                         role="tablist"
                         aria-orientation="vertical">
                        <a class="nav-link active"
                           id="v-pills-home-tab"
                           data-bs-toggle="pill"
                           href="#"
                           role="tab"
                           aria-controls="v-pills-home"
                           aria-selected="true">
                            <i class="bi bi-person"></i>
                            My Profile
                        </a>
                  
                  
                    </div>

                </div>


                <div class="col-lg-8">

                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active"
                             id="v-pills-home"
                             role="tabpanel"
                             aria-labelledby="v-pills-home-tab">
                            <div class="profile-content">
                                <div class="small text-danger" asp-validation-summary="ModelOnly"></div>
                                <form method="post" enctype="multipart/form-data" asp-action="CreateProfile" asp-controller="Company">
                                    <div class="profile-content-inner">
                                        <h2>Basic Info</h2>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Name"></label>
                                                    <input type="text"
                                                           asp-for="@Model.Name"
                                                           class="form-control"
                                                           placeholder="Company Name" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Name"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Email"></label>
                                                    <input type="email"
                                                           asp-for="@Model.Email"
                                                           class="form-control"
                                                           placeholder="hello@hi.com" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Email"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.PhoneNumber"></label>
                                                    <input type="text"
                                                           asp-for="@Model.PhoneNumber"
                                                           class="form-control"
                                                           placeholder="PhoneNumber" />
                                                    <span class="text-danger small" asp-validation-for="@Model.PhoneNumber"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Location"></label>

                                                    <select class="form-control form-control-sm"
                                                            asp-for="@Model.Location"
                                                            asp-items="@Model.Locations">
                                                        <option selected disabled>
                                                            Select here
                                                        </option>
                                                    </select>
                                                    <span class="text-danger small" asp-validation-for="@Model.Location"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Image"></label>
                                                    <input type="file" accept="image/*"
                                                           asp-for="@Model.Image"
                                                           class="form-control"
                                                           placeholder="Profession" />
                                                    <span class="text-danger small" asp-validation-for="@Model.Image"></span>
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.About"></label>
                                                    <input type="text"
                                                           asp-for="@Model.About"
                                                           class="form-control"
                                                           placeholder="About Company" />
                                                    <span class="text-danger small" asp-validation-for="@Model.About"></span>

                                                </div>
                                            </div>

                                            <input type="hidden" value="@Model.AppUser.Id"
                                                   asp-for="@Model.AppUserId" />


                                            <input type="hidden" value="2"
                                                   asp-for="@Model.UserType" />

                                        </div>
                                    </div>
                                 
                                    <button type="submit" class="btn dashboard-btn">
                                        Save Your Information
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer three pt-100 pb-70">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 col-lg-4">
                    <div class="footer-item three">
                        <div class="footer-left">
                            <a class="logo" href="index.html">
                                <img src="/img/ja-king-logo.png" alt="Logo" />
                                Company
                            </a>
                            <ul>
                                <li>
                                    <span>Address: </span>
