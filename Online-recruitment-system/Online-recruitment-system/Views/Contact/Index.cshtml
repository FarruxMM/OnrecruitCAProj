@model ContactViewModel

<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="title-item">
                    <h2>Contact</h2>
                    <ul>
                        <li>
                            <img src="/img/title-img-two.png" alt="Image" />
                            <a href="index.html">Home</a>
                        </li>
                        <li>
                            <span>/</span>
                        </li>
                        <li>Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="info">
    <div class="container">
        <div class="row">

            @foreach (var item in Model.Branch)
            {
                <div class="col-sm-6 offset-sm-3 offset-lg-0 col-lg-4">
                    <div class="info-card">
                        <i class="bi bi-globe"></i>
                        <h3>@item.Name</h3>
                        <p>@item.Location</p>
                        <ul>
                            <li>
                                <span>Mobile:</span>
                                <a href="tel:+10009871234">@item.PhoneNumber</a>
                            </li>
                            <li>
                                <span>Email:</span>
                                <a href="mailto:example@jecto.com">@item.Email</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="form">
    <div class="container">
        <div class="form-card">
            <h2>Contact Us</h2>
            <div class="small text-danger" asp-validation-summary="ModelOnly"></div>
            <form id="contactForm" method="post" asp-action="Contact">
                <div class="row">
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Contact.Name"></label>
                            <input type="text"
                                   asp-for="@Model.Contact.Name"
                                   id="name"
                                   class="form-control"
                                   data-error="Please enter your name" />
                            <span class="text-danger small" asp-validation-for="@Model.Contact.Name"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Contact.Email"></label>
                            <input type="email"
                                   asp-for="@Model.Contact.Email"
                                   id="email"
                                   class="form-control"
                                   data-error="Please enter your email" />
                            <span class="text-danger small" asp-validation-for="@Model.Contact.Email"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Contact.Phone"></label>
                            <input type="text"
                                   asp-for="@Model.Contact.Phone"
                                   id="phone_number"
                                   data-error="Please enter your number"
                                   class="form-control" />
                            <span class="text-danger small" asp-validation-for="@Model.Contact.Phone"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Contact.Subject"></label>
                            <input type="text"
                                   asp-for="@Model.Contact.Subject"
                                   id="msg_subject"
                                   class="form-control"
                                   data-error="Please enter your subject" />
                            <span class="text-danger small" asp-validation-for="@Model.Contact.Subject"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <div class="form-group">
                            <label asp-for="@Model.Contact.Message"></label>
                            <textarea class="form-control"
                                      id="message"
                                      cols="30"
                                      rows="8"
                                      asp-for="@Model.Contact.Message"
                                      data-error="Write your message"></textarea>
                            <span class="text-danger small" asp-validation-for="@Model.Contact.Message"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <div class="form-check agree-label">
                                <input name="gridCheck"
                                       value="I agree to the terms and privacy policy."
                                       class="form-check-input"
                                       type="checkbox"
                                       id="gridCheck" />
                                <label class="form-check-label" for="gridCheck">
                                    Accept
                                    <a href="terms-condition.html">Terms &amp; Conditions</a>
                                    And <a href="privacy-policy.html">Privacy Policy.</a>
                                </label>
                                <div class="help-block with-errors gridCheck-error"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <button type="submit"
                                class="btn"
                                style="pointer-events: all; cursor: pointer">
                            Send Message
                        </button>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="map">
    <div class="container-fluid p-0">

        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12157.836294678744!2d49.84165500000002!3d40.376517!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x8b209a8e1ed5eea9!2sAF%20Mall!5e0!3m2!1saz!2s!4v1656144672740!5m2!1saz!2s" width="1499" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

    </div>
</div>
