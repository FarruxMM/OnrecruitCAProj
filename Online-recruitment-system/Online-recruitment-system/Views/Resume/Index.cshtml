@model CvViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload-Cv</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/upload.css" />
</head>
<body>
    <div class="loader">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="spinner"></div>
            </div>
        </div>
    </div>

    <section class="option">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container align-items-center">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="option-content">
                                <div class="small text-danger" asp-validation-summary="ModelOnly"></div>
                                <form method="post" enctype="multipart/form-data" asp-action="Upload" asp-controller="Resume">

                                    <h3 class="pb-5" style="color:crimson">Upload Resume</h3>

                                    <div class="container">
                                        <div class="row">

                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <label asp-for="@Model.Resume.Resume_Title"></label>
                                                        <input asp-for="@Model.Resume.Resume_Title"
                                                               type="text"
                                                               class="form-control"
                                                               placeholder="Title" />
                                                        <span asp-validation-for="@Model.Resume.Resume_Title" class="error"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="input-box">
                                                    <div class="form-group">
                                                        <label asp-for="@Model.Resume.Resume_Bio"></label>
                                                        <textarea class="form-control" asp-for="@Model.Resume.Resume_Bio" placeholder="Bio Info"></textarea>
                                                        <span asp-validation-for="@Model.Resume.Resume_Bio" class="error"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label asp-for="@Model.Resume.Resume_Upload"></label>
                                                    <input type="file" asp-for="@Model.Resume.Resume_Upload"
                                                           accept=".doc,.docx,.pdf"
                                                           class="form-control"
                                                           placeholder="choose" />
                                                    <p class="pt-4">Max file size is 5MB, Allowed files are .doc, .docx, .pdf</p>

                                                    <span asp-validation-for="@Model.Resume.Resume_Upload" class="text-danger"></span>
                                                    <span class="error">@Html.ValidationMessage("ModelError")</span>
                                                </div>
                                            </div>

                                            <input type="hidden" asp-for="@Model.Resume.CandidateId" value="@Model.Candidate.Id" />

                                            <div class="col-lg-12">
                                                <button type="submit">Upload</button>
                                            </div>

                                        </div>

                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/jquery.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>
